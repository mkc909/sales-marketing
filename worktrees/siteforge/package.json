{
  "name": "siteforge",
  "version": "1.0.0",
  "description": "Automated Website-as-a-Service platform for small businesses",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "preview": "wrangler pages dev ./build/client",
    "deploy": "wrangler pages deploy ./build/client",
    "typecheck": "tsc",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest",
    "db:migrate": "wrangler d1 execute estateflow-db --file=migrations/001_initial_schema.sql && wrangler d1 execute estateflow-db --file=migrations/002_agent_profile_v2.sql && wrangler d1 execute estateflow-db --file=migrations/003_multi_industry_platform.sql",
    "db:reset": "node scripts/rollback-import.js reset",
    "db:backup": "node scripts/rollback-import.js backup",
    "import:generate": "node scripts/generate-test-data.js",
    "import:test": "node scripts/import-test.js test-data-10.csv",
    "import:verify": "node scripts/verify-import.js",
    "import:small": "node scripts/import-progressive.js test-data-100.csv",
    "import:medium": "node scripts/import-progressive.js test-data-1000.csv",
    "import:large": "node scripts/import-progressive.js test-data-10000.csv --skip-prompt",
    "import:full": "node scripts/import-progressive.js real-data.csv --force",
    "import:rollback": "node scripts/rollback-import.js rollback",
    "monitor:errors": "wrangler tail --format pretty",
    "monitor:db": "wrangler d1 execute estateflow-db --command=\"SELECT industry, COUNT(*) FROM professionals GROUP BY industry;\""
  },
  "dependencies": {
    "@cloudflare/ai": "^1.0.0",
    "@remix-run/cloudflare": "^2.3.0",
    "@remix-run/cloudflare-pages": "^2.3.0",
    "@remix-run/react": "^2.3.0",
    "clsx": "^2.0.0",
    "isbot": "^3.7.0",
    "lucide-react": "^0.555.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^7.3.0",
    "stripe": "^14.5.0",
    "tailwind-merge": "^2.1.0",
    "twilio": "^4.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "@faker-js/faker": "^8.3.1",
    "@remix-run/dev": "^2.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.16",
    "csv-parse": "^5.5.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^1.0.0",
    "wrangler": "^3.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
